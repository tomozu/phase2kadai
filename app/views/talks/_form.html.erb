<div class="form">
<%= form_with(model: @talk, local: true, url: choose_new_or_edit ) do |form| %>
 <% if @talk.errors.any? %>
  <div id="error_explanation">
   <ul>
    <% @talk.errors.full_messages.each do |msg| %>
     <li><%= msg %></li>
    <% end %>
   </ul>
  </div>
 <% end %>  
 
  <div class="talk_content">
    <%= form.label :content %>
    <%= form.text_field :content %>
  </div>
 <div class="form_submit">
  <%= form.submit %>
 </div>
</div>
<% end %>